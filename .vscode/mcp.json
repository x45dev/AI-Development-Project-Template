//.vscode/mcp.json
{
    "taskMaster": {
    "command": "docker-compose",
    "args": ["run", "--rm", "basic-memory"],
    "type": "stdio"
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "basicMemory": {
    "command": "docker-compose",
    "args": ["run", "--rm", "basic-memory"],
    "type": "stdio"
    },
    "basicMemory-Py": {
      "command": "uvx",
      "args": [
        "basic-memory",
        "mcp"
      ]
  }
}
